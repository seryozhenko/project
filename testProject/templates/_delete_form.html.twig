<form method="post" class="col-1" action="{{ path(pathToDel, {'id': entity.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
    <button class="btn btn-light" style="width:100%">Delete</button>
</form>
