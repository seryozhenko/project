{% extends 'base.html.twig' %}

{% block title %}Active substance{% endblock %}

{% block body %}
<div class="container">
    <h1>Active substance</h1>
    <div class="row list-group-item-info">
        <div class="col-2">ID</div>
        <div class="col-3">Name of substance</div>
    </div>
    <div class="row">
        <div class="col-2">{{ entity.id }}</div>
        <div class="col-3">{{ entity.substanceName }}</div>
    </div>
    <div class="row">
        <a href="{{ path('active_substance_list') }}" class="btn col-1 btn-light">Back</a>
        <a href="{{ path('active_substance_edit', {'id': entity.id}) }}" class="btn btn-info col-1">Edit</a>
        {{ include('_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
